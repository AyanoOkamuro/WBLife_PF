<div class="container mt-5">
  <div class="col mx-auto">
    <div class="card form-wrap">
      <div class="card-body">
        <h4 class="card-title mb-4 text-center">
          会員情報編集
        </h4>
        <%= form_with model: @user, url: user_path(@user.id), method: :PATCH, local: true do |f| %>
          <div class="form-group bmd-form-group">
            <%= f.label :ニックネーム, class:"bmd-label-floating" %>
            <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class:"form-control border-dark" %>
          </div>
          <div class="form-group bmd-form-group">
            <%= f.label :メールアドレス, class:"bmd-label-floating" %>
            <%= f.email_field :email, autocomplete: "email", class:"form-control border-dark" %>
          </div>
          <div class="bmd-form-group">
            <%= f.label :プロフィール画像, class:"bmd-label-floating" %><br>
            <%= f.attachment_field :profile_image, autocomplete: "profile_image" %>
          </div>
          <div class="bmd-form-group">
            <%= f.label :年代, class:"bmd-form-group mt-2" %><br>
            <%= f.select :age, User.ages.keys, {prompt: "選択してください"}, class:"prefecture-select" %>
          </div>
          <div class="form-group">
            <%= f.submit "編集内容を保存", class:"btn btn-outline-dark btn-block btn-raised mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
