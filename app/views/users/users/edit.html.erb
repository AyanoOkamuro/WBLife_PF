<div class="container">
  <div class="row mt-5">
    <h3 class="under">会員情報編集</h3>
  </div>

  <div class="container">
    <%= form_with model: @user, url: user_path(@user.id), method: :PATCH, local: true do |f| %>

      <div class="form-group row mt-5">
        <div class="col-sm-2"><%= f.label :ニックネーム %></div>
        <div class="col-sm-4"><%= f.text_field :nickname, class:"form-control border-dark" %></div>
      </div>
  
      <div class="form-group row mt-2">
        <div class="col-sm-2"><%= f.label :メールアドレス %></div>
        <div class="col-sm-4"><%= f.email_field :email, autofocus: true, class:"form-control border-dark"%></div>
      </div>
      
      <div class="form-group row mt-2">
        <div class="col-sm-2"><%= f.label :プロフィール画像 %></div>
        <div class="col-sm-4"><%= f.attachment_field :profile_image, autofocus: true, class:"form-control-file"%></div>
      </div>
  
      <div class="row mt-5 mb-5">
        <div class="offset-sm-2 col-sm-6"><%= f.submit "編集内容を保存", class:"btn btn-outline-dark font-weight-bold "%></div>
      </div>
    <% end %>
  </div>
</diV>