<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5">
      <%= attachment_image_tag @user, :profile_image, :fill,100, 100, format: "jpeg", fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>ニックネーム</th>
            <th><%= @user.nickname %></th>
          </tr>
          <tr>
            <th>いいね</th>
            <th></th>
          </tr>
          <tr>
            <th>フォロー</th>
            <th></th>
          </tr><tr>
            <th>フォロワー</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="col-6">
          <%= link_to "編集", edit_user_path(@user.id) %>
        </div>
        <div class="col-6">
          <%= link_to "退会", user_users_unsubscribe_path(@user.id) %>
        </div>
      </div>
    </div>
    <div class="col-md-8 offset-md-1 mt-5">
      <h2><%= @user.nickname %>の投稿</h2>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-3">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, format: "jpeg", fallback: "no_image.jpg", size: "200x150" %>
            <% end %>
            <p class="my-2"><%= link_to post.body, post_path(post.id),class:"text-dark" %></p>
            <p class="text-dark mb-5"><%= @user.nickname %></p>
          </div>
        <% end %>
      </div>
      <div class="row justify-content-center">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>