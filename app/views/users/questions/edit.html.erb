<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="my-5 under">質問編集</h3>
    </div>
    <div class="col-12">
      <%= form_with model: @question, url: question_path(@question),  local: true do |f| %>
        <div class="row mb-3">
          <div class="col-3 font-weight-bold"><%= f.label :質問タイトル %></div>
          <div class="col-4 mr-auto"><%= f.text_field :title %></div>
        </div>
        <div class="row mb-3">
          <div class="col-3 font-weight-bold"><%= f.label :質問内容 %></div>
          <div class="col-4 mr-auto"><%= f.text_area :body %></div>
        </div>
        <div class="row mb-3">
          <div class="col-3 font-weight-bold"><%= f.label :投稿画像 %></div>
          <div class="col-4 mr-auto"><%= f.attachment_field :image %></div>
        </div>
        <div class="offset-3 col-4">
          <%= f.submit "編集内容を投稿する", class: "btn btn-outline-dark px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
