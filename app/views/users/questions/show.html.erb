<div class="conteiner mt-5">
  <div class="col-md-8 col-md-2 mx-auto">
    <h5 class="ml-1"><strong>質問内容</strong></h5>
    <div class="card text-center mb-3">
      <div class="card-header align-items-center d-flex">
        <%= link_to user_path(@question.user) do %>
          <%= attachment_image_tag @question.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class: "rounded-circle" %>
        <% end %>
        <div class="ml-3">
          <strong>
            <%= @question.user.nickname %>さん<br>
          </strong>
          <%= @question.created_at.strftime('%Y/%m/%d') %>
        </div>
        <% if @question.user == current_user %>
          <div class="post-edit-destroy">
            <%= link_to edit_question_path(@question), class: "btn btn-default" do %>
              <i class="far fa-edit"></i>
            <% end %>
            <%= link_to question_path, method: :delete, data: {confirm: "この投稿を消しますか？"}, class: "btn btn-default" do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="card-body">
        <h6 class="card-text py-2"><%= @question.body %></h6>
        <div class="mb-2">
          <%= attachment_image_tag @question, :image, format: "jpeg", size: "500x400" %>
        </div>
      </div>
    </div>
    <%= form_with model: [@question, @answer], local: true do |f| %>
      <div class="form-group mt-5 text-center">
        <strong><label>回答文</label></strong>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="text-center"><%= f.attachment_field :image %></div>
      <div class="text-right mb-5">
        <%= button_tag :type => "submit", :class =>"btn btn-default" do %>
          <i class="far fa-paper-plane fa-lg"></i>
          <strong>送信</strong>
        <% end %>
      </div>
    <% end %>
    <h5 class="ml-1"><strong>回答 (<%= @question.answers.count %>件)</strong></h5>
    <% if @question.answers.any? %>
      <% @question.answers.each do |answer| %>
        <div class="card mb-3">
          <div class="card-header align-items-center d-flex">
            <%= link_to user_path(answer.user) do %>
              <%= attachment_image_tag answer.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class: "rounded-circle" %>
            <% end %>
            <div class="ml-3">
              <strong>
                <%= answer.user.nickname %>さん<br>
              </strong>
                <%= answer.created_at.strftime('%Y/%m/%d') %>
            </div>
            <% if answer.user == current_user %>
              <div class="post-edit-destroy">
                <%= link_to edit_question_answer_path(answer.question, answer), class: "btn btn-default" do %>
                  <i class="far fa-edit"></i>
                <% end %>
                <%= link_to question_answer_path(answer.question, answer), method: :delete, class: "btn btn-default" do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="card-body">
            <h6 class="card-text py-2"><%= answer.body %></h6>
            <div class="mb-2">
              <%= attachment_image_tag answer, :image, format: "jpeg", size: "500x400" %>
            </div>
            <% if answer.niced_by?(current_user) %>
              <%= link_to question_answer_nices_path(answer.question, answer), method: :delete do %>
                <i class="far fa-thumbs-up fa-xs" aria-hidden="true"  style="color: green;">
                  <strong>ナイス！</strong>
                </i>
              <% end %>
            <% else %>
              <%= link_to question_answer_nices_path(answer.question, answer), method: :post, style:"text-decoration:none; color:black;" do %>
                <i class="far fa-thumbs-up fa-xs" aria-hidden="true">
                  <strong>ナイス！</strong>
                </i>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <h4 class="text-center">この質問は回答募集中です</h4>
    <% end %>
  </div>
</div>