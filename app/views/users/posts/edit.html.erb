<div class="container mt-5">
  <div class="col mx-auto">
    <div class="card form-wrap">
      <div class="card-body">
        <h4 class="card-title mb-4 text-center">
          投稿編集
        </h4>
        <%= form_with model: @post, url: post_path(@post),  local: true do |f| %>
          <div class="bmd-form-group">
            <%= f.label :投稿画像, class:"bmd-label-floating" %><br>
            <%= f.attachment_field :image, autocomplete: "image" %>
          </div>
          <div class="form-group bmd-form-group">
            <%= f.label :投稿内容, class:"bmd-label-floating mt-2" %>
            <%= f.text_area :body, autofocus: true, autocomplete: "body", class:"form-control border-dark" %>
          </div>
          <div class="form-group bmd-form-group">
            <%= f.label "タグ（「,」で区切ると複数タグ登録できます）", class:"bmd-label-floating mt-2" %>
            <%= f.text_field :name, value: @tag_list, class:"form-control border-dark"%>
          </div>
          <div class="form-group">
            <%= f.submit "編集内容を投稿する", class:"btn btn-outline-dark btn-block btn-raised mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
