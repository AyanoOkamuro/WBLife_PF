<div class="container mt-5">
  <div class="row">
    <h2 class="mb-3">投稿一覧</h2>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-3">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, format: "jpeg", fallback: "no_image.jpg", size: "200x150" %>
        <% end %>
        <p class="my-2"><%= link_to post.user.nickname, user_path(post.user_id),class:"text-dark" %></p>
        <p class="text-dark mb-5"><%= post.body %></p>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <%= paginate @posts %>
  </div>
</div>