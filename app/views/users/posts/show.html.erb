<div class="col-md-10 col-md-offset-1 mx-auto postShow-wrap">
  <div class="row post-wrap">
    <div class="col-md-8">
      <div class="card-left">
        <%= attachment_image_tag @post, :image, format: "jpeg", fallback: "no_image.jpg", size: "200x200", class: "card-img-top" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card-right">
        <div class="card-right-comment">
          <div class="card-right-name">
            <%= link_to user_path(@post.user), class: "no-text-decoration" do %>
              <%= attachment_image_tag @post.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "40x40", class: "post-profile-icon" %>
            <% end %>
             <%= link_to user_path(@post.user), class: "black-color no-text-decoration post-user-name",
              title: @post.user.nickname do %>
              <strong><%= @post.user.nickname %></strong>
            <% end %>
            <% if @post.user_id == current_user.id %>
              <%= link_to post_path(@post), method: :delete, class: "ml-auto mx-0 my-auto" do %>
                <div class="delete-post-icon"></div>
              <% end %>
            <% end %>
          </div>
          <div class="m-2">
            <strong>
              <%= @post.body %>
            </strong>
          </div>
        </div>
        <div class="row parts">
          <div id="like-icon-post-<%= @post.id.to_s %>">
            <% if @post.liked_by?(current_user) %>
              <%= link_to post_likes_path(@post), method: :delete do %>
                <i class="fa fa-heart fa-xs" aria-hidden="true"  style="color: red;">
                  <%= @post.likes.count %>
                </i>
              <% end %>
            <% else %>
              <%= link_to post_likes_path(@post), method: :post do %>
                <i class="fa fa-heart fa-xs" aria-hidden="true">
                  <%= @post.likes.count %>
                </i>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="row parts" id="comment-form-post-<%= @post.id.to_s %>">
          <%= form_with model: [@post, Comment.new],  class: "w-100" do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :post_id, value: @post.id %>
            <%= f.text_field :comment, class: "form-control comment-input border-0", placeholder: "コメント ...", autocomplete: :off %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>