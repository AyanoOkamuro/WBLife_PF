<div class="container">
  <div class="row">
    <h4><span class="font-weight-bold">新着投稿</span></h4>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-3">
        <%= link_to new_user_session_path do %>
          <%= attachment_image_tag post, :image, format: "jpeg", fallback: "no_image.jpg", size: "200x150" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-end">
    <!--<= link_to "全ての商品を見る >", items_path %>-->
  </div>
</div>