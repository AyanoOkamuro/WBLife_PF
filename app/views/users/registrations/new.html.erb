<div class="container mt-5">
  <div class="col mx-auto">
    <div class="card form-wrap">
      <div class="card-body">
        <h4 class="card-title mb-4 text-center">
          アカウント登録
        </h4>
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <div class="form-group bmd-form-group">
            <%= f.label :ニックネーム, class:"bmd-label-floating" %>
            <%= f.text_field :nickname, autofocus: true, class:"form-control border-dark" %>
            <% errors_hash(resource)[:nickname].each do |error_msg| %>
              <p class="text-xs text-danger"><%= error_msg %></p>
            <% end %>
          </div>
          <div class="form-group bmd-form-group">
            <%= f.label :メールアドレス, class:"bmd-label-floating" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control border-dark" %>
              <% errors_hash(resource)[:email].each do |error_msg| %>
                <p class="text-xs text-danger"><%= error_msg %></p>
              <% end %>
          </div>
          <div class="form-group bmd-form-group">
            <%= f.label :パスワード, class:"bmd-label-floating" %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %>文字以上)
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control border-dark"%>
            <% errors_hash(resource)[:password].each do |error_msg| %>
              <p class="text-xs text-danger"><%= error_msg %></p>
            <% end %>
          </div>
          <div class="form-group bmd-form-group">
            <%= f.label :パスワード（確認用）, class:"bmd-label-floating" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control border-dark" %>
          </div>
          <div class="form-group bmd-form-group">
            <%= f.label :性別, class:"bmd-form-group" %><br>
              <%= f.radio_button :gender, :男性 %>
              <%= f.label :男性  %>
              <%= f.radio_button :gender, :女性 %>
              <%= f.label :女性  %>
              <%= f.radio_button :gender, :その他 %>
              <%= f.label :その他  %>
          </div>
          <div class="bmd-form-group">
            <%= f.label :年代, class:"bmd-form-group" %><br>
            <%= f.select :age, User.ages.keys, {prompt: "選択してください"}, class:"prefecture-select" %>
          </div>
          <div class="form-group">
            <%= f.submit "アカウント登録", class:"btn btn-outline-dark btn-block btn-raised mt-3" %>
          </div>
        <% end %>
        <div class="row justify-content-center">
          <h5>既に登録済みの方は</h5>
        </div>
        <div class="row justify-content-center">
          <p><%= link_to "こちら", new_user_session_path %>からログインしてください。</p>
        </div>
      </div>
    </div>
  </div>
</div>