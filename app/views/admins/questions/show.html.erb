<div class="conteiner mt-5">
  <div class="col-md-8 col-md-2 mx-auto">
    <h5 class="ml-1"><strong>質問内容</strong></h5>
    <div class="card text-center mb-3">
      <div class="card-header align-items-center d-flex">
        <%= link_to edit_admins_user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class: "rounded-circle" %>
        <% end %>
        <div class="ml-3">
          <strong>
            <%= link_to @user.nickname, edit_admins_user_path(@user), style:"text-decoration:none; color:black;" %>さん<br>
          </strong>
          <%= @question.created_at.strftime('%Y/%m/%d') %>
        </div>
        <div class="post-edit-destroy">
          <%= link_to admins_question_path, method: :delete, data: {confirm: "この投稿を消しますか？"}, class: "btn btn-default" do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
      <div class="card-body">
        <h6 class="card-text py-2"><%= @question.body %></h6>
        <div class="mb-2">
          <%= attachment_image_tag @question, :image, format: "jpeg", size: "500x400" %>
        </div>
      </div>
    </div>
    <h5 class="ml-1 mt-5"><strong>回答 (<%= @question.answers.count %>件)</strong></h5>
    <% if @question.answers.any? %>
      <% @question.answers.each do |answer| %>
        <div class="card mb-3">
          <div class="card-header align-items-center d-flex">
            <%= link_to edit_admins_user_path(answer.user) do %>
              <%= attachment_image_tag answer.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class: "rounded-circle" %>
            <% end %>
            <div class="ml-3">
              <strong>
                <%= link_to answer.user.nickname, edit_admins_user_path(answer.user), style:"text-decoration:none; color:black;"  %>さん<br>
              </strong>
                <%= answer.created_at.strftime('%Y/%m/%d') %>
            </div>
          </div>
          <div class="card-body">
            <h6 class="card-text py-2"><%= answer.body %></h6>
            <div class="mb-2">
              <%= attachment_image_tag answer, :image, format: "jpeg", size: "500x400" %>
            </div>
            <i class="far fa-thumbs-up fa-xs" aria-hidden="true"  style="color: green;">
              <strong>ナイス！<%= answer.nices.count %>件</strong>
            </i>
          </div>
        </div>
      <% end %>
    <% else %>
      <h4 class="text-center">この質問は回答募集中です</h4>
    <% end %>
  </div>
</div>