<div class="conteiner mt-5">
  <div class="col-md-8 col-md-2 mx-auto">
    <% @posts.each do |post| %>
      <div class="card-wrap mt-1 mb-4">
        <div class="card">
          <div class="card-header align-items-center d-flex">
            <%= link_to edit_admins_user_path(post.user) do %>
              <%= attachment_image_tag post.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "40x40", class: "rounded-circle" %>
            <% end %>
            <div class="post-user-name ml-3">
              <strong>
                <%= post.user.nickname %>
              </strong>
            </div>
          </div>
          <%= link_to admins_post_path(post) do %>
            <%= attachment_image_tag post, :image, format: "jpeg", fallback: "no_image.jpg", class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <div class="row">
              <i class="fa fa-heart ml-2" aria-hidden="true">
                <%= post.likes.count %>
              </i>
              <i class="far fa-comments ml-2">
                <strong><%= post.comments.count %></strong>
              </i>
            </div>
          </div>
          <div class="mt-1 mb-4 ml-3">
            <strong><%= post.user.nickname %></strong>
            <%= post.body %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>